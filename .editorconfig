# editorconfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[**.{js, coffee, json}]
indent_size = 4

[**.{html, scss, css, rb, erb, aspx, cshtml}]
indent_size = 2

# Two spaces at EOL inserts <br>
[**.md]
trim_trailing_whitespace = false

